{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "requireBranch": "main",
    "commit": true,
    "commitMessage": "chore(release): ğŸ”– create new tag/release v${version}",
    "tag": true,
    "tagName": "v${version}",
    "tagAnnotation": "v${version}",
    "push": true,
    "requireCommits": false,
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true,
    "makeLatest": true,
    "releaseName": "v${version}"
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "after:bump": "npm run build && git add dist",
    "before:release": "npm run contributors && git add CHANGELOG.md",
    "after:release": "npm run patch && echo 'Successfully released ${name} v${version} to ${repo.repository}'"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          { "type": "feat", "section": "ğŸš€ Features" },
          { "type": "fix", "section": "ğŸ©¹ Fixes" },
          { "type": "perf", "section": "ğŸ”¥ Performance" },
          { "type": "refactor", "section": "ğŸ’… Refactors" },
          { "type": "docs", "section": "ğŸ“– Documentation" },
          { "type": "build", "section": "ğŸ“¦ Build" },
          { "type": "types", "section": "ğŸŒŠ Types" },
          { "type": "chore", "section": "ğŸ¡ Chore" },
          { "type": "examples", "section": "ğŸ€ Examples" },
          { "type": "test", "section": "âœ… Tests" },
          { "type": "style", "section": "ğŸ¨ Styles" },
          { "type": "ci", "section": "ğŸ¤– CI" },
          { "type": "revert", "section": "âª Revert" },
          { "type": "cd", "section": "ğŸšš CD" }
        ]
      }
    }
  }
}
